    private function getDefaultHeaders(?array $headers = null): array
    {
        $default = [
            'CONTENT_TYPE' => 'application/json',
            'HTTP_ACCEPT' => 'application/ld+json',
        ];

{{authHeaderLine}}

        return array_merge($default, $headers ?? []);
    }

    protected function getContent(): array
    {
        if (!$this->response) {
            throw new \RuntimeException('No response available.');
        }

        $raw = (string) $this->response->getContent();
        if ($raw === '') {
            return [];
        }

        $decoded = json_decode($raw, true);
        if (!is_array($decoded)) {
            throw new \RuntimeException('Invalid JSON response.');
        }

        return $decoded;
    }

    protected function getArrayResponse(): array
    {
        return $this->getContent();
    }

    protected function user(): User
    {
        if (!$this->user) {
            throw new \RuntimeException('No current user available.');
        }

        return $this->user;
    }

{{authHelpers}}

	protected function idOf(object $entity, string $prefixApi =  ""): string
    {
  		  $id = "";
        if (method_exists($entity, 'getId')) {
            $id = $entity->getId();
            if (is_object($id) && method_exists($id, 'toRfc4122')) {
                return (string) $id->toRfc4122();
            }
        }

        if (property_exists($entity, 'id')) {
            $id = $entity->id;
            if (is_object($id) && method_exists($id, 'toRfc4122')) {
                return (string) $id->toRfc4122();
            }
        }

        return  $prefixApi.$id;
    }
